# Environment variables for registryaccord-identity-go

# Runtime environment (dev, staging, prod)
ID_ENV=dev

# HTTP server address
ID_HTTP_ADDR=:8080

# Metrics server address (if enabled)
ID_METRICS_ADDR=:9090

# PostgreSQL connection string (optional, for persistent storage)
# Format: postgres://user:pass@host:port/db?sslmode=disable
ID_DB_DSN=

# Key storage backend (memory, postgres)
ID_KEY_BACKEND=memory

# Enable identity recovery feature
ID_FEATURE_RECOVERY=false

# Base64-encoded Ed25519 private key for JWT signing (required)
# Generate with: openssl rand -base64 32
ID_JWT_SIGNING_KEY=

# JWT audience and issuer claims
ID_JWT_AUD=registryaccord-local
ID_JWT_ISS=registryaccord-identity

# Session and nonce TTLs (in seconds)
ID_SESSION_TTL_SECONDS=600
ID_NONCE_TTL_SECONDS=300
