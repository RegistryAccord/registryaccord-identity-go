# EditorConfig helps maintain consistent coding styles
# Normative: this repo follows upstream TERMINOLOGY for MUST/SHOULD (RFC 2119/8174)
# Source: ../registryaccord-specs/TERMINOLOGY.md
root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.go]
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4
